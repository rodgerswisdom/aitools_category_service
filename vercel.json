{
  "version": 2,
  "builds": [
    {
      "src": "category_service/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "category_service/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "category_service.settings",
    "PYTHONPATH": "./category_service"
  }
}

